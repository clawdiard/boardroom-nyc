---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  currentPath?: string;
}

const { title, currentPath = '/' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Board Room NYC â€” Your guide to NYC's skateboard scene" />
    <link rel="icon" type="image/svg+xml" href="/boardroom-nyc/favicon.svg" />
    <link rel="manifest" href="/boardroom-nyc/manifest.json" />
    <meta name="theme-color" content="#1a1a2e" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Oswald:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <title>{title}</title>
    <script defer data-domain="clawdiard.github.io/boardroom-nyc" src="https://plausible.io/js/script.js"></script>
  </head>
  <body>
    <Nav currentPath={currentPath} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
